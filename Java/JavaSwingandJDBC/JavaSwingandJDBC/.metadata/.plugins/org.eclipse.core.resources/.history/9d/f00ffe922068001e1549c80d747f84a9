package exam02;

import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class BoderLayoutTest extends JFrame {
	public BoderLayoutTest() {
		setTitle("BorderLayoutTest");
		setSize(300,150);
		
		JPanel panel = new JPanel(new BorderLayout());
		
		add(new JButton("North"));
		add(new JButton("Center"));
		add(new JButton("West"));
		add(new JButton("East"));
		add(new JButton("South"));
		
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
	}
	
	public static void main(String[] args) {
		BoderLayoutTest b = new BoderLayoutTest();

	}

}
